---
// TextSection.astro
const {
  subheader,
  color = "green", // "green" eller "beige"
} = Astro.props;

const headerColor = color === "beige" ? "text-beige-500" : "text-green-500";
const textColor = color === "beige" ? "text-beige-500" : "text-red-900";
---
<div>
  <h3 class={`text-h3-mobil lg:text-h3-desktop pb-spacebarm16 ${headerColor}`}>{subheader}</h3>
  <div class={`sm:text-p-small-mobil lg:text-p-small-desktop text-red-500 ${textColor}`}>
    <slot />
  </div>
</div>

