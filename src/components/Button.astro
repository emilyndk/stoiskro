---

const {
  text = "Button",
  icon,
  variant = "primary",
  size = "medium",
  href = null,
} = Astro.props;

const base = "inline-flex items-center gap-5 font-dmsans uppercase rounded-full transition-colors";

const sizeStyles = {
  small: {
    text: "text-button-primary-mobil",    // Responsiv tekststørrelse
    iconCircle: "sm:w-4 sm:h-4",   // Responsiv størrelse på cirklen
    icon: "sm:w-4 sm:h-4",   // Responsiv størrelse på ikonet
  },
  medium: {
    text: "text-base h-10",    // Responsiv tekststørrelse
    iconCircle: "md:w-8 md:h-8",   // Responsiv størrelse på cirklen
    icon: "md:w-6 md:h-6",   // Responsiv størrelse på ikonet
  },
  large: {
    text: "text-button-primary-desktop",    // Responsiv tekststørrelse
    iconCircle: "lg:w-12 lg:h-12",   // Responsiv størrelse på cirklen
    icon: "lg:w-8 lg:h-8",   // Responsiv størrelse på ikonet
  },
};

const variantStyles = {
  primary: {
    button: "bg-green-500 text-beige-500 hover:bg-green-900 py-0 pl-4 pr-6 lg:py-0 lg:pl-6 lg:pr-8", // bred padding
  },
  "primary-negative": {
    button: "bg-beige-500 text-green-500 hover:bg-green-500 hover:border hover:border-beige-500 hover:text-beige-500 py-0 px-6", // bred padding
  },

  "primary-negativeRed": {
    button: "bg-beige-500 text-green-500 hover:bg-red-500 hover:border hover:border-beige-300 hover:text-beige-300 py-0 px-6", // bred padding
  },

  secondaryLeft: {
    button: "bg-transparent text-green-500 py-0 pl-0 pr-4", // smallere padding
    iconCircle: "bg-red-500 text-beige-500 hover:bg-red-700",
  },
  "secondary-right": {
    button: "bg-none text-green-500 py-0 pl-0 pr-4",
    iconCircle: "bg-red-500 text-beige-500 hover:bg-red-700",
    arrowDirection: "rotate-180",
  },
  "secondary-negative": {
    button: "bg-transparent text-beige-500 py-0 pr-4",
    iconCircle: "bg-beige-500 text-green-500 hover:bg-green-500 hover:border hover:border-beige-500 hover:text-beige-500",
  },
  "secondary-iconOnly": {
    button: "p-0", // ingen padding for ikonknap
    iconCircle: "bg-red-500 text-beige-500 hover:bg-red-700",
  },
};

---
{href ? (
    <a href={href} class={`group ${variant} ${base} ${sizeStyles[size].text} ${variantStyles[variant].button}`}>
      <span class={`flex items-center justify-center rounded-full ${variantStyles[variant].iconCircle} ${variantStyles[variant].arrowDirection} ${sizeStyles[size].iconCircle} overflow-hidden`}>
        <svg width="40" height="40" viewBox="0 0 40 23" fill="none" xmlns="http://www.w3.org/2000/svg" class="arrow-wrapper">
          <g clip-path="url(#clip0_544_26897)">
            <path d="M25.4358 5.13816L31.3668 11.0691L5 11.0691L5 12.9591L31.3978 12.9591L25.4358 18.9211L26.7722 20.2574L35 12.0296L26.7721 3.8018L25.4358 5.13816Z" fill="currentColor" />
          </g>
          <defs>
            <clipPath id="clip0_544_26897">
              <rect width="40" height="23" fill="white" />
            </clipPath>
          </defs>
        </svg>
      </span>
      <span>{text}</span>
    </a>
  ) : (
    <button class={`group ${variant} ${base} ${sizeStyles[size].text} ${variantStyles[variant].button}`}>
      <span class={`flex items-center justify-center rounded-full ${variantStyles[variant].iconCircle} ${variantStyles[variant].arrowDirection} ${sizeStyles[size].iconCircle} overflow-hidden`}>
        <svg width="40" height="40" viewBox="0 0 40 23" fill="none" xmlns="http://www.w3.org/2000/svg" class="arrow-wrapper">
          <g clip-path="url(#clip0_544_26897)">
            <path d="M25.4358 5.13816L31.3668 11.0691L5 11.0691L5 12.9591L31.3978 12.9591L25.4358 18.9211L26.7722 20.2574L35 12.0296L26.7721 3.8018L25.4358 5.13816Z" fill="currentColor" />
          </g>
          <defs>
            <clipPath id="clip0_544_26897">
              <rect width="40" height="23" fill="white" />
            </clipPath>
          </defs>
        </svg>
      </span>
      <span>{text}</span>
    </button>
  )}
  
  
  
  
  
  
  <style>

.arrow-wrapper {
  display: block; /* Sørg for, at SVG'en er i blok for at få animationen */
  transition: transform 0.3s ease; /* Glidende overgang for rotation */
}
    .group:hover .arrow-wrapper {
      animation: arrow-slide 1.3s infinite;
    }
  
    /* Animation keyframes */
    @keyframes arrow-slide {
      0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(100%);
      }
    }
  
  </style>

  <style>
    <style>
.arrow-wrapper {
  display: block;
  transition: transform 1s ease;
}

/* Gælder kun for knapper med klassen .secondary-right */
.secondary-right:hover .arrow-wrapper {
  transform: rotate(180deg);
}
</style>


  