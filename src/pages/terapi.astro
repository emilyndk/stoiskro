---
import MainLayout from "../layouts/MainLayout.astro";
import AccordionTerapi from "../components/AccordionTerapi.astro";
import Textbox from "../components/Textbox.astro";
import TextBullet from "../components/TextBullet.astro"
import Image from "../components/Image.astro"
import Overskrift from "../components/Overskrift.astro";
import AccordionVirksomhed from "../components/AccordionVirksomhed.astro";
import Footer from "../components/Footer.astro"
import IconButton from "../components/Button.astro"
import Header from "../components/Header.astro"
---

<MainLayout title="Om stoisk ro">


<Header h1="Terapi" imgSrc="/img/terapi-illustration.svg"></Header>

	<!-- Terapi accordion sat op i forhold til grid -->

    <section class="py-spacebarm64 lg:py-spacebard136 grid grid-cols-grid-mobil lg:grid-cols-grid-desktop px-[16px] lg:px-[64px]  gap-gap-mobil lg:gap-gap-desktop">


        <div class="col-start-2 col-span-10">
        
        <AccordionTerapi></AccordionTerapi>
        
        </div>
        
    </section>

    <section class="bg-green-500 py-spacebarm64 lg:py-spacebard136 grid grid-cols-grid-mobil lg:grid-cols-grid-desktop px-[16px] lg:px-[64px]  gap-gap-mobil lg:gap-gap-desktop">

        <div class="col-start-2 col-span-10 lg:col-start-2 lg:col-span-5">
            <Overskrift text="Til virksomheder" color="beige" />
        </div>
        <div class="pb-spacebarm16 lg:pb-0 col-start-2 col-span-10 lg:col-start-2 lg:col-span-5">
            <TextBullet subheader="Styrk trivsel og perfomance" text="Når medarbejdere oplever ro, kontrol og mental klarhed, skaber det ikke kun trivsel – det skaber også bedre resultater. Mine skræddersyede workshops og forløb hjælper teams og organisationer med at:" BulletPoints3={["Stoiske principper til at skabe ro og handlekraft i udfordrende situationer", "Praktiske øvelser til at navigere pres med større klarhed og stabilitet.", "Forebyggelse af stress og udbrændthed – strategier til at håndtere pres, før det bliver overvældende", "Mental robusthed i en travl hverdag – hvordan man bevarer ro, fokus og energi, selv under høj belastning", "Effektiv stresshåndtering – konkrete metoder til at reducere bekymringer og tankemylder", "Åndedrætsteknikker og refleksionsværktøjer – praktiske øvelser til at styrke mental balance og overskud", "Skabelse af en sund arbejdskultur – hvordan ledere og teams kan fremme trivsel og reducere sygefravær"]} color="beige" />
        
              <div class="lg:pt-spacebar32 hidden lg:block">
                <IconButton text="Gå til pakker" variant="secondary-negative" size="large" href="/terapi#virksomhed" />
              </div>
            
        </div>

        <div class="col-start-2 col-span-10 lg:col-start-8 lg:col-span-4">
            <Image
            imageSrc="/img/bogreol.webp"
            imageAlt="Artjom putter bog i bogreol"
            />
            <div class=" pt-spacebarm16 block lg:hidden">
                <IconButton text="Gå til pakker" variant="secondary-negative" size="small" href="/terapi#virksomhed" />
              </div>
        </div>
    </section>

    <section id="virksomhed" class=" py-spacebar32 lg:py-spacebard136 grid grid-cols-grid-mobil lg:grid-cols-grid-desktop px-[16px] lg:px-[64px]  gap-gap-mobil lg:gap-gap-desktop">
        <div class="col-start-2 col-span-10 lg:col-start-3 lg:col-span-5">
        
            <Textbox subheader="Skab et arbejdsmiljø med høj energi og stærke resultater" text="Skab ro, fokus og handlekraft i en travl hverdag. Med afsæt i stoisk tænkning og praktiske værktøjer hjælper disse forløb medarbejdere og teams med at forebygge stress, træffe bedre beslutninger og håndtere følelser med overblik og styrke. Forløbene tilbydes i forskellige formater, så I kan vælge den pakke, der passer bedst til jeres virksomhed og behov." color="green" />
        </div>
        <div class="col-start-2 col-span-10 lg:col-start-9 lg:col-span-2">
            <Image
            imageSrc="/img/balancevirk.svg"
            imageAlt="Balance mellem to cirkler"
            />

        </div>
    </section>

    	<!-- Virksomhed acordion sat op i forhold til grid -->
<section class="pb-spacebar32 lg:pb-spacebard136 grid grid-cols-grid-mobil lg:grid-cols-grid-desktop px-[16px] lg:px-[64px] gap-gap-mobil lg:gap-gap-desktop">

    <div class="col-start-2 col-span-10">
    
    <AccordionVirksomhed></AccordionVirksomhed>
    
    </div>
    
    </section>

    <section class="bg-green-500 py-spacebarm64 lg:py-spacebard136">

    <Footer></Footer>

    </section>
</MainLayout>